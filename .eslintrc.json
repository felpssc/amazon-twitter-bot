{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
				"eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
			"import/extensions": [
				"error",
				"ignorePackages",
				{
					"js": "never",
					"jsx": "never",
					"ts": "never",
					"tsx": "never"
				}
		 ],
		 "class-methods-use-this": "off",
		 "import/prefer-default-export": "off"
    },
		"settings": {
			"import/resolver": {
				"node": {
					"extensions": [".js", ".jsx", ".ts", ".tsx"]
				}
			}
		}
}
